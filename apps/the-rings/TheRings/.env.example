# ==========================================
# THE RING AT FULLMER LEGACY CENTER
# Environment Variables Template
# ==========================================
# Copy this file to .env.local and fill in your values
# Never commit .env.local to version control

# ----------------------------------
# SUPABASE
# ----------------------------------
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key
DATABASE_URL=postgresql://postgres:your-password@db.your-project.supabase.co:5432/postgres

# ----------------------------------
# STRIPE PAYMENTS
# ----------------------------------
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_your-publishable-key
STRIPE_SECRET_KEY=sk_test_your-secret-key
STRIPE_WEBHOOK_SECRET=whsec_your-webhook-secret

# ----------------------------------
# WEATHER API
# ----------------------------------
# Optional - weather widget will be disabled if not provided
# Get free key from: https://home.openweathermap.org/users/sign_up
NEXT_PUBLIC_OPENWEATHER_API_KEY=your-openweather-key

# ----------------------------------
# GOOGLE CLOUD APIS
# ----------------------------------
# Google Places API for destination photos and place details
GOOGLE_PLACES_API_KEY=your-google-places-key
# YouTube Data API v3 for video enrichment
YOUTUBE_API_KEY=your-youtube-api-key

# ----------------------------------
# AI MODELS
# ----------------------------------
# OpenAI API for AI content generation
# Get key from: https://platform.openai.com/api-keys
OPENAI_API_KEY=your-openai-key
# Gemini API (Google AI for content generation)
GEMINI_API_KEY=your-gemini-key

# ----------------------------------
# VOICE & AVATAR
# ----------------------------------
# ElevenLabs API
ELEVENLABS_API_KEY=your-elevenlabs-key

# ----------------------------------
# EMAIL DELIVERY
# ----------------------------------
# SendGrid Email Service
SENDGRID_API_KEY=your-sendgrid-key

# ----------------------------------
# IMAGES
# ----------------------------------
# Unsplash API for image assets
UNSPLASH_APPLICATION_ID=your-unsplash-app-id
UNSPLASH_ACCESS_KEY=your-unsplash-access-key
UNSPLASH_SECRET_KEY=your-unsplash-secret-key

# ----------------------------------
# PROJECT LINKS
# ----------------------------------
THERINGS_GIT=https://github.com/WasatchWise/TheRings.git

