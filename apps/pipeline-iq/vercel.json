{
  "framework": "nextjs",
  "installCommand": "cd ../.. && pnpm install --frozen-lockfile",
  "buildCommand": "cd ../.. && pnpm run build --filter=grooveleads-pro",
  "ignoreCommand": "npx turbo-ignore grooveleads-pro",
  "crons": [
    {
      "path": "/api/cron/scrape",
      "schedule": "0 6 * * *"
    },
    {
      "path": "/api/cron/auto-outreach",
      "schedule": "0 16 * * *"
    },
    {
      "path": "/api/cron/auto-outreach",
      "schedule": "0 13 27 1 *"
    },
    {
      "path": "/api/cron/auto-follow-up",
      "schedule": "0 14 * * *"
    },
    {
      "path": "/api/cron/auto-archive",
      "schedule": "0 6 * * 0"
    },
    {
      "path": "/api/cron/update-goals",
      "schedule": "0 9 * * *"
    }
  ]
}

